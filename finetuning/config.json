{
  "description": "Finetuning configuration for Console Homepage AI models",
  
  "data": {
    "train_data": "training_data.jsonl",
    "train_ratio": 0.9,
    "max_seq_length": 2048
  },
  
  "training": {
    "num_epochs": 3,
    "batch_size": 2,
    "gradient_accumulation_steps": 4,
    "learning_rate": 2e-4,
    "warmup_steps": 10,
    "weight_decay": 0.01,
    "lr_scheduler": "cosine",
    "optimizer": "adamw_8bit",
    "seed": 3407
  },
  
  "lora": {
    "lora_r": 16,
    "lora_alpha": 16,
    "lora_dropout": 0.05,
    "lora_target_modules": [
      "q_proj",
      "k_proj", 
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ]
  },
  
  "quantization": {
    "load_in_4bit": true,
    "bnb_4bit_quant_type": "nf4",
    "bnb_4bit_use_double_quant": true
  },
  
  "logging": {
    "logging_steps": 10,
    "save_steps": 100,
    "eval_steps": 100,
    "report_to": "none"
  },
  
  "output": {
    "output_dir": "./finetuned_model",
    "save_merged_model": false
  },
  
  "recommended_models": {
    "tiny": {
      "name": "Qwen/Qwen2.5-0.5B-Instruct",
      "size": "~500MB",
      "description": "Smallest model, fastest training",
      "batch_size": 4,
      "epochs": 5
    },
    "small": {
      "name": "HuggingFaceTB/SmolLM2-360M-Instruct",
      "size": "~360MB",
      "description": "Very small but capable",
      "batch_size": 4,
      "epochs": 4
    },
    "medium": {
      "name": "Qwen/Qwen2.5-1.5B-Instruct",
      "size": "~1.5GB",
      "description": "Good balance of size and capability",
      "batch_size": 2,
      "epochs": 3
    },
    "large": {
      "name": "google/gemma-2-2b-it",
      "size": "~2GB",
      "description": "Most capable, slower training",
      "batch_size": 1,
      "epochs": 2
    }
  },
  
  "hardware_recommendations": {
    "consumer_gpu": {
      "min_vram": "8GB",
      "recommended_model": "Qwen/Qwen2.5-0.5B-Instruct",
      "batch_size": 2,
      "notes": "Use 4-bit quantization"
    },
    "gaming_gpu": {
      "min_vram": "12GB",
      "recommended_model": "Qwen/Qwen2.5-1.5B-Instruct",
      "batch_size": 2,
      "notes": "Can train medium models"
    },
    "pro_gpu": {
      "min_vram": "24GB",
      "recommended_model": "google/gemma-2-2b-it",
      "batch_size": 4,
      "notes": "Can train larger models with bigger batches"
    },
    "apple_silicon": {
      "min_ram": "16GB",
      "recommended_model": "mlx-community/Qwen2.5-0.5B-Instruct",
      "method": "mlx",
      "notes": "Use MLX for optimal performance on Mac"
    },
    "cpu_only": {
      "min_ram": "16GB",
      "recommended_model": "HuggingFaceTB/SmolLM2-360M-Instruct",
      "batch_size": 1,
      "notes": "Very slow, not recommended. Consider using Google Colab or cloud GPU."
    }
  }
}
